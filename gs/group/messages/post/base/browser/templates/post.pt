<article
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  tal:attributes="class string:h-entry ${view/cssClass};
                  id string:post-${view/post/post_id};
                  aria-labelledby string:post-${view/post/post_id}-title">
  <tal:block repeat="viewlet options/viewlets">
    <tal:block content="structure viewlet/render">Post content</tal:block>
  </tal:block>
</article><!--h-entry-->
